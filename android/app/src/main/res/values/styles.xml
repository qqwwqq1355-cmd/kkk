<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting up -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/brand_maroon</item>
        <item name="android:navigationBarColor">@color/brand_maroon</item>
    </style>
    
    <!-- Normal theme applied when Flutter is running -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:statusBarColor">@color/brand_maroon</item>
        <item name="android:navigationBarColor">@color/brand_maroon</item>
    </style>
</resources>
